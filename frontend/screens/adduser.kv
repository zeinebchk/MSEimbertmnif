<AddUserScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0

        # Topbar
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            padding: 10
            canvas:
                Color:
                    rgba: 0.2, 0.4, 0.6, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "[b]Gestion des Utilisateurs[/b]"
                markup: True
                font_size: 20
                color: 1, 1, 1, 1

        # Zone principale avec sidebar et contenu
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 1

            # Sidebar (exemple)
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: None
                width: '200dp'
                padding: 10
                spacing: 10
                canvas:
                    Color:
                        rgba: 0.1, 0.2, 0.3, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "[b]Menu[/b]"
                    markup: True
                    size_hint_y: None
                    height: '40dp'
                    color: 1, 1, 1, 1

                # Ajoute d'autres √©l√©ments dans la sidebar
                Button:
                    text: "Ajouter utilisateur"
                    on_release:app.root_to_addUser()
                Button:
                    text: "Utilisateurs"
                    on_release:app.root_to_listUsers()
                Button:
                    text: "Gestion du role"
                    on_release:app.root_to_gestionRole()
                Button:
                    text: "d√©connexion"
                    on_release:app.logout()

            # Zone de contenu principale
            ScrollView:
                do_scroll_x: False
                size_hint_y: 1

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 20
                    padding: 10

                    # section Ouvrier
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 8

                        Label:
                            text: "üë∑‚Äç‚ôÇÔ∏è Ajouter un Ouvrier"
                            font_size: 30
                            font_name: "EmojiFont"
                            color: 0.2, 0.3, 0.6, 1
                            size_hint_y: None
                            height: '40dp'

                        TextInput:
                            id: nom_ouvrier
                            hint_text: "Nom üë§"
                            font_name: "EmojiFont"
                            multiline: False
                            size_hint_y: None
                            height: '40dp'
                            width:'200dp'

                        TextInput:
                            id: prenom_ouvrier
                            hint_text: "Pr√©nom üßæ"
                            font_name: "EmojiFont"
                            multiline: False
                            size_hint_y: None
                            height: '40dp'

                        TextInput:
                            id: matricule_ouvrier
                            hint_text: "Matricule üÜî"
                            font_name: "EmojiFont"
                            multiline: False
                            size_hint_y: None
                            height: '40dp'

                        Button:
                            text: "‚úÖ Ajouter Ouvrier"
                            font_name: "EmojiFont"
                            background_color: 0, 0.7, 0.6, 1
                            size_hint_y: None
                            height: '50dp'
                            on_release: root.ajouter_ouvrier()

                    # section Utilisateur
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 8

                        Label:
                            text: "üë®‚Äçüíº Ajouter un Utilisateur de l'application"
                            font_size: 22
                            font_name: "EmojiFont"
                            color: 0.2, 0.3, 0.6, 1
                            size_hint_y: None
                            height: '40dp'

                        TextInput:
                            id: nom_utilisateur
                            hint_text: "Nom üë§"
                            font_name: "EmojiFont"
                            multiline: False
                            size_hint_y: None
                            height: '40dp'

                        Label:
                            id: username_error
                            text: ""
                            font_size: 18
                            color: 1, 0, 0, 1
                            size_hint_y: None
                            height: self.texture_size[1]
                        TextInput:
                            id: motdepasse_utilisateur
                            hint_text: "Mot de passe üîê"
                            font_name: "EmojiFont"
                            password: True
                            multiline: False
                            size_hint_y: None
                            height: '40dp'
                        Label:
                            id: password_error
                            text: ""
                            font_size: 18
                            color: 1, 0, 0, 1
                            size_hint_y: None
                            height: self.texture_size[1]
                        Spinner:
                            id: role_utilisateur
                            text: "S√©lectionner un r√¥le"
                            values: ["production", "coupe","piqure1","picure2","piqure3","montage","control"]
                            font_name: "EmojiFont"
                            size_hint_y: None
                            height: '40dp'
                            on_text: print(f"R√¥le s√©lectionn√© : {self.text}")
                        Label:
                            id: message
                            text: ""
                            font_name: "EmojiFont"
                            color: 1, 0, 0, 1
                            font_size: 18
                            bold: True
                            size_hint_y: None
                            height: self.texture_size[1]
                        Button:
                            text: "‚ûï Ajouter Utilisateur"
                            font_name: "EmojiFont"
                            background_color: 0.3, 0.6, 0.8, 1
                            size_hint_y: None
                            height: '50dp'
                            on_release: root.ajouter_utilisateur()

