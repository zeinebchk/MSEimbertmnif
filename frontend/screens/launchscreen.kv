<LaunchScreen>:
    search_input: search_input
    status_label: status_label
    table_grid: table_grid
    table_scroll: table_scroll
    header_scroll: header_scroll

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        # --- En-t√™te ---
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            padding: dp(10)
            spacing: dp(10)
            canvas.before:
                Color:
                    rgba: 0.2, 0.5, 0.8, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "üìä Tableau de bord"
                font_name: 'EmojiFont'
                color: 1, 1, 1, 1
                bold: True
                font_size: '20sp'
                halign: 'left'
                valign: 'middle'
                size_hint_x: 1
                text_size: self.size

        # --- Corps principal : sidebar fixe + contenu scrollable ---
        BoxLayout:
            orientation: 'horizontal'

            # --- Sidebar fixe ---
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.2
                padding: dp(10)
                spacing: dp(10)
                canvas.before:
                    Color:
                        rgba: 0.8, 0.8, 0.8, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Button:
                    text: "‚ñ∂Ô∏è Lancement"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_lancement()

                Button:
                    text: "Modification du lancement"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_update_launch()

                Button:
                    text: "üìÑ Rapports"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_dashboardProduction()
                Button:
                    text: "En cours"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_ofs_encours()
                Button:
                    text: "D√©connexion"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.logout()

            # --- Contenu scrollable √† droite ---
            ScrollView:
                do_scroll_y: True
                do_scroll_x: False
                bar_width: dp(10)

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(15)
                    spacing: dp(15)

                    # --- Formulaire de recherche ---
                    BoxLayout:
                        opacity: 1 if root.show_table else 0
                        size_hint_y: None
                        height: dp(50)
                        spacing: dp(10)

                        Spinner:
                            id: column_spinner
                            text: "Toutes les colonnes"
                            values: ["Toutes les colonnes", "dateLancement", "numOF", "Modele", "Coloris", "SAIS","Pointure"]
                            size_hint_x: 0.25
                            font_size: 16
                            background_color: 0.95, 0.95, 0.95, 1
                            color: 0, 0, 0, 1

                        TextInput:
                            id: search_input
                            hint_text: 'üîç Rechercher...'
                            font_name: 'EmojiFont'
                            size_hint_x: 0.4
                            multiline: False
                            font_size: 18
                            foreground_color: 0, 0, 0, 1
                            cursor_color: 0, 0, 0, 1
                            background_normal: ''
                            background_color: 0.95, 0.95, 0.95, 1
                            padding: dp(5)

                        Button:
                            text: "üîé Rechercher"
                            font_name: 'EmojiFont'
                            size_hint_x: 0.15
                            size_hint_y: None
                            height: dp(50)
                            background_normal: ''
                            background_color: 0, 0, 0, 0
                            color: 0, 0, 0, 1
                            font_size: '14sp'
                            on_press: root.search()
                            canvas.before:
                                Color:
                                    rgba: 0.7, 0.85, 1, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                                Color:
                                    rgba: 0.5, 0.5, 0.5, 1
                                Line:
                                    rectangle: (self.x, self.y, self.width, self.height)
                                    width: 1

                        Button:
                            text: 'üîÑ R√©initialiser'
                            font_name: 'EmojiFont'
                            size_hint_x: 0.15
                            background_normal: ''
                            background_color: 1, 0.7, 0.7, 1
                            color: 0, 0, 0, 1
                            font_size: '14sp'
                            on_press: root.reset_filter()
                            canvas.before:
                                Color:
                                    rgba: 0.5, 0.5, 0.5, 1
                                Line:
                                    rectangle: (self.x, self.y, self.width, self.height)
                                    width: 1

                    Label:
                        id: status_label
                        text: ''
                        font_name: 'EmojiFont'
                        size_hint_y: None
                        height: dp(30)
                        color: 0.2, 0.2, 0.2, 1
                        font_size: '14sp'

                    # --- Tableau ---
                    BoxLayout:
                        opacity: 1 if root.show_table else 0
                        id: box_table_container
                        orientation: 'vertical'
                        size_hint_x: 1
                        size_hint_y: None
                        height: self.minimum_height

                        ScrollView:
                            id: header_scroll
                            do_scroll_x: True
                            do_scroll_y: False
                            size_hint_y: None
                            height: dp(40)

                            GridLayout:
                                id: header_grid
                                size_hint_y: None
                                height: dp(40)
                                size_hint_x: None
                                width: self.minimum_width
                                cols: 1

                        ScrollView:
                            id: table_scroll
                            do_scroll_x: True
                            do_scroll_y: True

                            GridLayout:
                                id: table_grid
                                size_hint_y: None
                                height: self.minimum_height
                                size_hint_x: None
                                width: self.minimum_width
                                cols: 1
                    Label:
                        id: qte_total_label
                        text: ''
                        font_name: 'EmojiFont'
                        size_hint_y: None
                        height: dp(30)
                        color: 0.2, 0.2, 0.2, 1
                        font_size: '16sp'
                    # --- Cases √† cocher ---
                    BoxLayout:
                        opacity: 1 if root.show_table else 0
                        orientation: 'vertical'
                        id: my_checkbox
                        size_hint_y: None
                        height: self.minimum_height
                        padding: dp(20)
                        spacing: dp(15)

                        Label:
                            text: "üõ†Ô∏è S√©lectionner type de cha√Æne"
                            font_name: 'EmojiFont'
                            font_size: 28
                            bold: True
                            color: 0.2, 0.2, 0.2, 1
                            size_hint_y: None
                            height: dp(50)
                            canvas.before:
                                Color:
                                    rgba: 0.92, 0.92, 0.92, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size

                        GridLayout:
                            id: type_chaine
                            cols: 2
                            size_hint_y: None
                            height: self.minimum_height
                            spacing: dp(30)
                            padding: dp(30)

                            canvas.before:
                                Color:
                                    rgba: 0.98, 0.98, 0.98, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                                Color:
                                    rgba: 0.6, 0.6, 0.6, 1
                                Line:
                                    rectangle: (self.x, self.y, self.width, self.height)
                                    width: 1

                        Button:
                            text: "Enregistrer"
                            color: 0, 0, 0, 1
                            font_size: '16sp'
                            size_hint_y: None
                            height: dp(50)
                            background_normal: ''
                            background_color: 1, 0.85, 0.4, 1
                            on_release: root.save_ofs_typechaine()
                            canvas.before:
                                Color:
                                    rgba: 0.7, 0.7, 0.7, 1
                                Line:
                                    rectangle: (self.x, self.y, self.width, self.height)
                                    width: 1
