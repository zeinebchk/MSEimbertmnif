<DashboardScreen>:
    status_label: status_label
    table_grid: table_grid
    table_scroll: table_scroll
    header_scroll: header_scroll

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        # En-t√™te
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            padding: dp(10)
            spacing: dp(10)
            canvas.before:
                Color:
                    rgba: 0.2, 0.5, 0.8, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "üìä Tableau de bord"
                font_name: 'EmojiFont'
                color: 1, 1, 1, 1
                bold: True
                font_size: '20sp'
                halign: 'left'
                valign: 'middle'
                size_hint_x: 1
                text_size: self.size

        # Corps principal : Sidebar + Scrollable Content
        BoxLayout:
            orientation: 'horizontal'

            # Sidebar fixe
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.2
                padding: dp(10)
                spacing: dp(10)
                canvas.before:
                    Color:
                        rgba: 0.8, 0.8, 0.8, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Button:
                    text: "‚ñ∂Ô∏è Lancement"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_lancement()

                Button:
                    text: "Modification du lancement"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_update_launch()

                Button:
                    text: "üìÑ Rapports"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_dashboardProduction()
                Button:
                    text: "En cours"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_ofs_encours()
                Button:
                    text: "D√©connexion"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.logout()


            # ScrollView sur le contenu de droite
            ScrollView:
                do_scroll_y: True
                do_scroll_x: False
                bar_width: dp(10)

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(15)
                    spacing: dp(15)

                    # Formulaire de recherche
                    BoxLayout:
                        size_hint_y: None
                        height: dp(50)
                        spacing: dp(10)
                        Spinner:
                            id: year_id
                            opacity:1
                            text: "Choisir l'ann√©e"
                            values: []
                            size_hint_x: 0.25
                            size_hint_y: None
                            height: dp(40)
                            font_size: 18
                            on_text: root.spinner_selected(self.text)
                            color: 0, 0, 0, 1
                            background_normal: ''  # pour enlever image de fond par d√©faut
                            background_color: 1, 1, 1, 1  # blanc

                            canvas.before:
                                Color:
                                    rgba: 0.8, 0.8, 0.8, 1  # gris clair pour la bordure
                                Line:
                                    width: 1.2
                                    rectangle: self.x, self.y, self.width, self.height

                            # Emoji chevron bas √† droite
                            RelativeLayout:
                                size: root.size
                                pos: root.pos
                        Spinner:
                            id: week_id
                            opacity:1
                            text: "Choisir le num de semaine"
                            values: []
                            size_hint_x: 0.25
                            size_hint_y: None
                            height: dp(40)
                            font_size: 18
                            on_text: root.spinner_selected(self.text)
                            color: 0, 0, 0, 1
                            background_normal: ''  # pour enlever image de fond par d√©faut
                            background_color: 1, 1, 1, 1  # blanc

                            canvas.before:
                                Color:
                                    rgba: 0.8, 0.8, 0.8, 1  # gris clair pour la bordure
                                Line:
                                    width: 1.2
                                    rectangle: self.x, self.y, self.width, self.height

                            # Emoji chevron bas √† droite
                            RelativeLayout:
                                size: root.size
                                pos: root.pos

                        Button:
                            text: "üîé Rechercher"
                            font_name: 'EmojiFont'
                            size_hint_x: 0.15
                            size_hint_y: None
                            height: dp(40)
                            on_press: root.search()

                    # Label de statut
                    Label:
                        id: status_label
                        text: ''
                        font_name: 'EmojiFont'
                        size_hint_y: None
                        height: dp(30)
                        font_size: '14sp'

                    # Diagrammes en secteurs (scroll horizontal)
                    ScrollView:
                        do_scroll_x: True
                        do_scroll_y: False
                        size_hint_y: None
                        height: dp(250)

                        BoxLayout:
                            opacity: 1 if root.show_table else 0
                            id: pie_chart_container
                            orientation: 'horizontal'
                            size_hint_x: None
                            width: self.minimum_width
                            height: self.minimum_height
                            spacing: dp(20)
                            padding: dp(10)

                    # Tableau
                    BoxLayout:
                        opacity: 1 if root.show_table else 0
                        id: box_table_container
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height

                        ScrollView:
                            id: header_scroll
                            do_scroll_x: True
                            do_scroll_y: False
                            size_hint_y: None
                            height: dp(40)

                            GridLayout:
                                id: header_grid
                                size_hint_y: None
                                height: dp(40)
                                size_hint_x: None
                                width: self.minimum_width
                                cols: 1

                        ScrollView:
                            id: table_scroll
                            do_scroll_x: True
                            do_scroll_y: True

                            GridLayout:
                                id: table_grid
                                size_hint_y: None
                                height: self.minimum_height
                                size_hint_x: None
                                width: self.minimum_width
                                cols: 1
                    Spinner:
                        id: model_id
                        opacity:1 if root.show_table else 0
                        text: "Choisir un modele"
                        values: []
                        size_hint_x: 0.25
                        size_hint_y: None
                        height: dp(30)
                        font_size: 18
                        on_text: root.spinner_selected(self.text)
                        color: 0, 0, 0, 1
                        background_normal: ''  # pour enlever image de fond par d√©faut
                        background_color: 1, 1, 1, 1  # blanc

                        canvas.before:
                            Color:
                                rgba: 0.8, 0.8, 0.8, 1  # gris clair pour la bordure
                            Line:
                                width: 1.2
                                rectangle: self.x, self.y, self.width, self.height

                        # Emoji chevron bas √† droite
                        RelativeLayout:
                            size: root.size
                            pos: root.pos


                    BoxLayout:
                        id: bar_chart_container
                        opacity:1 if root.show_statistics else 0
                        size_hint_y: None
                        height: self.minimum_height
                        padding: dp(40)
                        orientation: 'vertical'
                        spacing: dp(5)
                        # Centrer horizontalement
                        pos_hint: {'center_x': 0.5}
                    BoxLayout:

                        id: tableau_graphique_container
                        orientation: 'vertical'
                        spacing: dp(20)
                        size_hint_y: None
                        height: self.minimum_height
                        opacity: 1 if root.show_statistics else 0