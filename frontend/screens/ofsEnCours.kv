<OfsEnCoursScreen>:
    table_grid: table_grid
    table_scroll: table_scroll
    header_scroll: header_scroll

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        # Bandeau sup√©rieur
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            padding: dp(10)
            spacing: dp(10)
            canvas.before:
                Color:
                    rgba: 0.2, 0.5, 0.8, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "üìä Tableau de bord"
                font_name: 'EmojiFont'
                color: 1, 1, 1, 1
                bold: True
                font_size: '20sp'
                halign: 'left'
                valign: 'middle'
                size_hint_x: 1
                text_size: self.size

        # Corps principal
        BoxLayout:
            orientation: 'horizontal'

            # Menu lat√©ral
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.2
                padding: dp(10)
                spacing: dp(10)
                canvas.before:
                    Color:
                        rgba: 0.8, 0.8,  0.8, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Button:
                    text: "‚ñ∂Ô∏è Lancement"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_lancement()

                Button:
                    text: "Modification du lancement"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_update_launch()

                Button:
                    text: "üìÑ Rapports"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_dashboardProduction()

                Button:
                    text: "En cours"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_ofs_encours()

                Button:
                    text: "D√©connexion"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.logout()

            # Zone principale
            ScrollView:
                do_scroll_y: True
                do_scroll_x: False
                bar_width: dp(10)

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(15)
                    spacing: dp(15)

                    Spinner:
                        id: model_id
                        opacity: 1 if root.show_table else 0
                        text: "Choisir un mod√®le"
                        values: ['DCDP500 STRETCH BISQUE','DCDP500 STRETCH NOIR','DCDP900 LEATHER half-point BEI','GAS 580Leather Slippers WHT','GRPD 500F half-point BEI','Half Point Leather Free Chrome','MDW WIYHOUT CHROME']
                        size_hint_x: 0.25
                        size_hint_y: None
                        height: dp(30)
                        font_size: 18
                        on_text: root.spinner_selected(self.text)
                        color: 0, 0, 0, 1
                        background_normal: ''
                        background_color: 1, 1, 1, 1
                        canvas.before:
                            Color:
                                rgba: 0.8, 0.8, 0.8, 1
                            Line:
                                width: 1.2
                                rectangle: self.x, self.y, self.width, self.height

                    Button:
                        text: "üîÑ R√©initialiser"
                        font_name: 'EmojiFont'
                        size_hint: None, None
                        size: dp(150), dp(40)
                        background_color: 0.8, 0.1, 0.1, 1
                        color: 1, 1, 1, 1
                        on_release: root.reinitialiser_formulaire()

                    BoxLayout:
                        opacity: 1 if root.show_table else 0
                        id: box_table_container
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height

                        ScrollView:
                            id: header_scroll
                            do_scroll_x: True
                            do_scroll_y: False
                            size_hint_y: None
                            height: dp(40)

                            GridLayout:
                                id: header_grid
                                size_hint_y: None
                                height: dp(40)
                                size_hint_x: None
                                width: self.minimum_width
                                cols: 1

                        ScrollView:
                            id: table_scroll
                            do_scroll_x: True
                            do_scroll_y: True

                            GridLayout:
                                id: table_grid
                                size_hint_y: None
                                height: self.minimum_height
                                size_hint_x: None
                                width: self.minimum_width
                                cols: 1

                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_y: None
                            height: dp(50)
                            padding: dp(5)
                            spacing: dp(10)

                            Widget:
                            Button:
                                text: "Modifier"
                                size_hint: None, None
                                size: dp(120), dp(40)
                                font_size: '15sp'
                                on_release: root.afficherTextFields()
                                background_color: 0.2, 0.6, 0.9, 1
                                color: 1, 1, 1, 1

                    BoxLayout:
                        opacity: 1 if root.show_modification_section else 0
                        id: edit_section
                        orientation: 'vertical'
                        size_hint_y: None
                        height: 600 if root.show_modification_section else 0
                        padding: dp(10)
                        spacing: dp(10)
                        canvas.before:
                            Color:
                                rgba: 0.95, 0.95, 0.95, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size

                        Label:
                            text: "‚úèÔ∏è Modifier les d√©tails de l'OF s√©lectionn√©"
                            font_size: '18sp'
                            color: 0.1, 0.3, 0.5, 1
                            size_hint_y: None
                            height: dp(30)

                        GridLayout:
                            cols: 2
                            spacing: dp(8)
                            row_default_height: dp(40)
                            row_force_default: True
                            size_hint_y: None
                            height: self.minimum_height
                            width: dp(400)
                            size_hint_x: None

                            Label:
                                text: "Num√©ro OF :"
                                color: 0.1, 0.3, 0.5, 1
                            TextInput:
                                id: numOF_input
                                multiline: False
                                disabled: True
                                background_color: 0.95, 0.95, 0.95, 1
                                foreground_color: 0.3, 0.3, 0.3, 1

                            Label:
                                text: "Inventaire :"
                                color: 0.1, 0.3, 0.5, 1
                            TextInput:
                                id: inventaire_input
                                multiline: False

                            Label:
                                text: "Export :"
                                color: 0.1, 0.3, 0.5, 1
                            TextInput:
                                id: export_input
                                multiline: False

                            Label:
                                text: "Magasin :"
                                color: 0.1, 0.3, 0.5, 1
                            TextInput:
                                id: magasin_input
                                multiline: False

                            Label:
                                text: "Nbre :"
                                color: 0.1, 0.3, 0.5, 1
                            TextInput:
                                id: nbre_input
                                multiline: False

                            Label:
                                text: "DF :"
                                color: 0.1, 0.3, 0.5, 1
                            BoxLayout:
                                orientation: 'horizontal'
                                TextInput:
                                    id: df_input
                                    width: dp(150)
                                Button:
                                    text: "üóì"
                                    font_name: 'EmojiFont'
                                    size_hint_x: None
                                    width: dp(40)
                                    background_normal: ''
                                    background_color: 0, 0, 0, 0
                                    on_release: root.open_calendar()

                            Label:
                                text: "Observation :"
                                color: 0.1, 0.3, 0.5, 1
                            TextInput:
                                id: observation_input
                                multiline: False

                        Widget:
                            size_hint_y: None
                            height: dp(10)

                        Button:
                            text: "‚úÖ Valider les modifications"
                            font_name: 'EmojiFont'
                            size_hint: None, None
                            size: dp(200), dp(45)
                            pos_hint: {"center_x": 0.5}
                            font_size: '16sp'
                            background_color: 0.2, 0.6, 0.2, 1
                            color: 1, 1, 1, 1
                            on_release: root.valider_modifications()
