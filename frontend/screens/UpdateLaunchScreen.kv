<UpdateLaunchScreen>:
    table_grid: table_grid
    table_scroll: table_scroll
    header_scroll: header_scroll

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        # --- En-t√™te ---
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            padding: dp(10)
            spacing: dp(10)
            canvas.before:
                Color:
                    rgba: 0.2, 0.5, 0.8, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "üìä Tableau de bord"
                font_name: 'EmojiFont'
                color: 1, 1, 1, 1
                bold: True
                font_size: '20sp'
                halign: 'left'
                valign: 'middle'
                size_hint_x: 1
                text_size: self.size

        # --- Corps ---
        BoxLayout:
            orientation: 'horizontal'

            # --- Sidebar ---
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.2
                padding: dp(10)
                spacing: dp(10)
                canvas.before:
                    Color:
                        rgba: 0.8, 0.8, 0.8, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Button:
                    text: "‚ñ∂Ô∏è Lancement"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_lancement()

                Button:
                    text: "Modification du lancement"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_update_launch()

                Button:
                    text: "üìÑ Rapports"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_dashboardProduction()

                Button:
                    text: "En cours"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.root_to_ofs_encours()

                Button:
                    text: "D√©connexion"
                    font_name: 'EmojiFont'
                    font_size: '16sp'
                    on_release: app.logout()

            # --- Contenu principal ---
            ScrollView:
                do_scroll_y: True
                do_scroll_x: False
                bar_width: dp(10)

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(15)
                    spacing: dp(15)

                    # --- Recherche ---
                    BoxLayout:
                        size_hint_y: None
                        height: dp(50)
                        spacing: dp(10)
                        Spinner:
                            id: year_id
                            opacity:1
                            text: "Choisir l'ann√©e"
                            values: []
                            size_hint_x: 0.25
                            size_hint_y: None
                            height: dp(40)
                            font_size: 18
                            color: 0, 0, 0, 1
                            background_normal: ''  # pour enlever image de fond par d√©faut
                            background_color: 1, 1, 1, 1  # blanc

                            canvas.before:
                                Color:
                                    rgba: 0.8, 0.8, 0.8, 1  # gris clair pour la bordure
                                Line:
                                    width: 1.2
                                    rectangle: self.x, self.y, self.width, self.height

                            # Emoji chevron bas √† droite
                            RelativeLayout:
                                size: root.size
                                pos: root.pos
                        Spinner:
                            id: week_id
                            opacity:1
                            text: "Choisir le num de semaine"
                            values: []
                            size_hint_x: 0.25
                            size_hint_y: None
                            height: dp(40)
                            font_size: 18
                            color: 0, 0, 0, 1
                            background_normal: ''  # pour enlever image de fond par d√©faut
                            background_color: 1, 1, 1, 1  # blanc

                            canvas.before:
                                Color:
                                    rgba: 0.8, 0.8, 0.8, 1  # gris clair pour la bordure
                                Line:
                                    width: 1.2
                                    rectangle: self.x, self.y, self.width, self.height

                            # Emoji chevron bas √† droite
                            RelativeLayout:
                                size: root.size
                                pos: root.pos
                        Spinner:
                            id: model_id
                            text: "Choisir un mod√®le"
                            values: []
                            size_hint_x: None
                            size_hint_y: None
                            width:dp(250)
                            height: dp(40)
                            font_size: 18
                            background_normal: ''
                            background_color: 1, 1, 1, 1
                            color: 0, 0, 0, 1
                            canvas.before:
                                Color:
                                    rgba: 0.8, 0.8, 0.8, 1
                                Line:
                                    width: 1.2
                                    rectangle: self.x, self.y, self.width, self.height

                        Button:
                            text: "üîé Rechercher"
                            font_name: 'EmojiFont'
                            size_hint_x: 0.15
                            size_hint_y: None
                            height: dp(40)
                            on_press: root.search()

                        Button:
                            text: 'üîÑ R√©initialiser'
                            font_name: 'EmojiFont'
                            size_hint_x: 0.15
                            background_normal: ''
                            background_color: 1, 0.7, 0.7, 1
                            color: 0, 0, 0, 1
                            font_size: '14sp'
                            size_hint_y: None
                            height: dp(40)
                            on_press: root.reset_filter()

                    # --- Tableau avec ent√™tes et contenu ---
                    BoxLayout:
                        id: box_table_container
                        orientation: 'vertical'
                        size_hint_y: None
                        height: dp(500)

                        # --- En-t√™tes du tableau ---
                        ScrollView:
                            id: header_scroll
                            do_scroll_x: True
                            do_scroll_y: False
                            size_hint_y: None
                            GridLayout:
                                id: header_grid
                                size_hint_y: None
                                height: dp(40)
                                size_hint_x: None
                                width: self.minimum_width
                                cols: 1

                        # --- Lignes du tableau ---
                        ScrollView:
                            id: table_scroll
                            do_scroll_x: True
                            do_scroll_y: True
                            height: dp(460)
                            GridLayout:
                                id: table_grid
                                size_hint_y: None
                                height: self.minimum_height
                                size_hint_x: None
                                width: self.minimum_width
                                cols: 1

                        # --- Cocher tous ---
                        BoxLayout:
                            size_hint_y: None
                            height: dp(50)
                            padding: [dp(10), 0, 0, 0]  # plus de padding √† droite
                            spacing: dp(5)  # r√©duit l‚Äôespacement entre les √©l√©ments
                            orientation: 'horizontal'
                            size_hint_x: None
                            width: dp(700)  # largeur fixe si tu veux tout coller √† gauche
                            pos_hint: {'x': 0}  # aligne √† gauche

                            CheckBox:
                                id: select_all_checkbox
                                on_active: root.select_all_rows(self.active)
                                size_hint: None, None
                                size: dp(20), dp(20)
                                background_normal: ''
                                background_down: ''
                                canvas.before:
                                    Color:
                                        rgba: 0, 0, 0, 1
                                    Line:
                                        width: 1
                                        rectangle: (self.x, self.y, self.width, self.height)

                            Label:
                                text: "Cocher tous"
                                font_size: '14sp'
                                color: 0, 0, 0, 1
                                size_hint: None, None
                                size: dp(100), dp(25)   # ajuste √† la taille du texte
                                valign: 'middle'
                                halign: 'left'
                                text_size: self.size

                            Button:
                                text: "Valider s√©lection et modifier"
                                size_hint: None, None
                                size: dp(200), dp(25)
                                background_color: 0.4, 0.7, 1, 1
                                color: 1, 1, 1, 1
                                on_release: root.valider_selection()


                    # --- Type de cha√Æne ---
                    BoxLayout:
                        opacity: 1 if root.show_checkboxes else 0
                        orientation: 'vertical'
                        id: my_checkbox
                        size_hint_y: None
                        height: self.minimum_height
                        padding: dp(20)
                        spacing: dp(15)

                        Label:
                            text: "üõ†Ô∏è S√©lectionner type de cha√Æne"
                            font_name: 'EmojiFont'
                            font_size: 28
                            bold: True
                            color: 0.2, 0.2, 0.2, 1
                            size_hint_y: None
                            height: dp(50)
                            canvas.before:
                                Color:
                                    rgba: 0.92, 0.92, 0.92, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size

                        GridLayout:
                            id: type_chaine
                            cols: 2
                            size_hint_y: None
                            height: self.minimum_height
                            spacing: dp(30)
                            padding: dp(30)
                            row_default_height: dp(80)
                            row_force_default: True
                            canvas.before:
                                Color:
                                    rgba: 0.98, 0.98, 0.98, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                                Color:
                                    rgba: 0.6, 0.6, 0.6, 1
                                Line:
                                    rectangle: (self.x, self.y, self.width, self.height)
                                    width: 1

                    # --- Bouton Enregistrer ---
                    Button:
                        opacity:1 if root.show_checkboxes else 0
                        text: "Enregistrer"
                        color: 0, 0, 0, 1
                        font_size: '16sp'
                        size_hint_y: None
                        height: dp(50)
                        background_normal: ''
                        background_color: 1, 0.85, 0.4, 1
                        on_release: root.save_ofs_typechaine()
                        canvas.before:
                            Color:
                                rgba: 0.7, 0.7, 0.7, 1
                            Line:
                                rectangle: (self.x, self.y, self.width, self.height)
                                width: 1
