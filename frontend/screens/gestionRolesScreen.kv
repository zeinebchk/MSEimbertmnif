<GestionRoleScreen>:
    BoxLayout:
        orientation: 'vertical'

        # Topbar
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            padding: 10
            canvas:
                Color:
                    rgba: 0.2, 0.4, 0.6, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "[b]Gestion des Utilisateurs[/b]"
                markup: True
                font_size: 20
                color: 1, 1, 1, 1

        # Corps avec Sidebar et ScrollView pour contenu
        BoxLayout:
            orientation: 'horizontal'

            # Sidebar
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: None
                width: '200dp'
                padding: 10
                spacing: 10
                canvas:
                    Color:
                        rgba: 0.1, 0.2, 0.3, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "[b]Menu[/b]"
                    markup: True
                    size_hint_y: None
                    height: '40dp'
                    color: 1, 1, 1, 1

                Button:
                    text: "Ajouter utilisateur"
                    on_release: app.root_to_addUser()
                Button:
                    text: "Utilisateurs"
                    on_release: app.root_to_listUsers()
                Button:
                    text: "Gestion du role"
                    on_release: app.root_to_gestionRole()
                Button:
                    text: "déconnexion"
                    on_release: app.logout()

            # Contenu principal avec scroll
            ScrollView:
                do_scroll_y: True
                do_scroll_x: False

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: 10
                    spacing: 10

                    BoxLayout:
                        size_hint_y: None
                        height: '50dp'
                        spacing: 10

                        TextInput:
                            id: search_input
                            hint_text: "Rechercher par nom"
                            multiline: False

                        Button:
                            text: "Rechercher"
                            on_release: root.chercher_par_nom()
                        Button:
                            text: "⟳"
                            on_release: root.loadUsers()

                    Label:
                        text: "Liste des roles"
                        font_size: 20
                        bold: True
                        size_hint_y: None
                        height: '40dp'
                        color: 0, 0, 0, 1

                    ScrollView:
                        id: table_scroll
                        do_scroll_x: True
                        do_scroll_y: True
                        bar_width: dp(10)
                        size_hint_y: None
                        height: '200dp'

                        GridLayout:
                            id: table_grid
                            cols: 1
                            size_hint_y: None
                            height: self.minimum_height
                            row_default_height: dp(40)
                            spacing: dp(5)
                    BoxLayout:
                        size_hint_y: None
                        height: '50dp'
                        spacing: 10

                        TextInput:
                            id: input_role
                            hint_text: "entrez l'id"
                            multiline: False

                        Button:
                            text: "ajouter"
                            on_release: root.addRole()
                        Button:
                            text: "Modifier"
                            on_release: root.afficher_detail_user()

                    # Modifier utilisateur
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: '200dp'
                        padding: 10
                        spacing: 20
                        opacity: 1 if root.show_modification else 0
                        canvas:
                            Color:
                                rgba: 0.9, 0.9, 0.9, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size

                        Label:
                            text: "Modifier Role"
                            font_size: 22
                            bold: True
                            size_hint_y: None
                            height: '50dp'
                            color:0,0,0,1

                        BoxLayout:
                            spacing: 10
                            size_hint_y: None
                            height: '40dp'
                            Label:
                                text: "nouvelle valeur:"
                                size_hint_x: 0.3
                                color: 0, 0, 0, 1
                            TextInput:
                                id: mod_new_role
                                multiline: False
                                text: ""

                        Button:
                            text: "Valider Modification"
                            size_hint_y: None
                            height: '40dp'
                            background_color: 0.2, 0.6, 0.8, 1
                            on_release: root.updateUser()
